<h2 class="page-header">Account Login</h2>
{{#if verified_msg}}
    <div class="alert alert-success">{{verified_msg}}</div>
{{/if}}
<form method="post" action="/users/userList">
 <label>Username</label>
 <div class="form-group">
    <input type="text" class="form-control col-sm-2" style="width: 10%;" name="countrycode" value="{{user.countryCode}}" placeholder="Country Code">
    <input type="text" class="form-control col-sm-4" style="width: 40%;" name="username" value="{{user.username}}" placeholder="Phone number">
</div>

<div class="form-group">
    <label style="margin-right: 41%;">Password</label>
    <input type="password" class="form-control" style="width: 50%;" name="password" placeholder="Password">
</div>
<label>Verfication Code</label>
<div class="form-group">
    <input type="text" class="form-control col-sm-4" style="width: 50%;" name="code" value="{{code}}" placeholder="6-digit number">
    {{#if msgSent}}
        <button type="submit" class="btn btn-default">Sent</button>
    {{else}}
        <button type="submit" formmethod="post" formaction="/users/admin" class="btn btn-default">Send Token</button>
    {{/if}}
</div>
<button type="submit" formmethod="post" formaction="/users/login" class="btn btn-default">Login</button> 
</form>